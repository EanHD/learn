root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{c,cpp,h,hpp}]
indent_size = 4

[*.{rs,py}]
indent_size = 4

[*.{sh,bash}]
indent_size = 2

[*.go]
indent_style = tab

[*.{kt,java}]
indent_size = 4

[*.{swift,dart}]
indent_size = 2

[*.{ts,js}]
indent_size = 2

[*.cs]
indent_size = 4

[*.sql]
indent_size = 2

[*.lua]
indent_size = 2

[*.ps1]
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
